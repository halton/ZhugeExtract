{
  "name": "zhuge-extract-backend",
  "version": "1.0.0",
  "description": "ZhugeExtract 后端API服务",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:migrate": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.1",
    "fastify": "^4.24.3",
    "drizzle-orm": "^0.29.1",
    "postgres": "^3.4.3",
    "redis": "^4.6.10",
    "minio": "^7.1.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "crypto": "^1.0.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "tsx": "^4.6.0",
    "tsc-alias": "^1.8.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.13.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "vitest": "^1.0.4",
    "drizzle-kit": "^0.20.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "archive",
    "extract",
    "backend",
    "api",
    "file-sharing"
  ],
  "author": "ZhugeExtract Team",
  "license": "MIT"
}